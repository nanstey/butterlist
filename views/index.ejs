  <% include ./_header.ejs %>
  <body>
    <main id="container">
      <div class="field">
        <p class="control">
        <input class="input is-medium" id="list-input" type="text" placeholder="Add some buttery things...">
        </p>

      </div>
      <div class="columns is-gapless categories">
        <div class="column category" id="movies" data-id="1">
          <div class="category-header">
            <i class="fa fa-ticket" aria-hidden="true"></i>
            <span class="category-name">Movies & TV Shows</span>
            <a class="toggler">
              <i class="fa fa-minus" aria-hidden="true"></i>
            </a>
          </div>
          <div class="list-items sortable">
            <div class="list-item" data-id="1">
              <p>Margerine</P>
            </div>
            <div class="list-item" data-id="2">
              <p>Butter Cream</p>
            </div>
            <div class="list-item completed" data-id="3">
              <p>Peanut Butter</p>
            </div>
          </div>
        </div>
        <div class="column category" id="restaurants" data-id="2">
          <div class="category-header">
            <i class="fa fa-ticket" aria-hidden="true"></i>
            <span class="category-name">Restaurants</span>
            <a class="toggler">
              <i class="fa fa-minus" aria-hidden="true"></i>
            </a>
          </div>
          <div class="list-items sortable">
            <div class="list-item" data-id="4">
              <p>Becel</P>
            </div>
            <div class="list-item" data-id="5">
              <p>Butter Beer</p>
            </div>
          </div>
        </div>
        <div class="column category" id="books">
         <i class="fa fa-book" aria-hidden="true"></i> Books
         <i class="fa fa-plus" aria-hidden="true"></i>
         <i class="fa fa-minus" aria-hidden="true"></i>
         <div class="list-item">
            <p id="list-books">Almond Butter</P>
          </div>
          <div class="list-item">
            <p>Seed Butter</P>
          </div>
          <div class="list-item">
            <p>Butternut Squash</P>
          </div>
        </div>
        <div class="column category" id="products">
         <i class="fa fa-shopping-bag" aria-hidden="true"></i> Products
         <i class="fa fa-plus" aria-hidden="true"></i>
         <i class="fa fa-minus" aria-hidden="true"></i>
         <div class="list-item">
            <p id="list-products">Nut Butter</P>
          </div>
        </div>
      </div>
    </main>


    <% include ./_footer.ejs %>
  </body>
</html>



